---
import Layout from '../../layouts/Layout.astro';
import { getBlogPosts } from '../../lib/contentful';

// Fetch blog posts from Contentful
let posts = [];
try {
  posts = await getBlogPosts();
} catch (error) {
  console.error('Error loading blog posts:', error);
}

// Function to format date
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-GB', { 
    day: 'numeric', 
    month: 'long', 
    year: 'numeric' 
  });
}
---

<Layout title="Cleaning Tips & Blog - Clean Collective Ltd" description="Expert cleaning tips, advice, and insights from Clean Collective Ltd. Learn how to keep your home spotless.">
	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-emerald-600 to-emerald-800 text-white py-16 md:py-20">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Cleaning Tips & Blog</h1>
				<p class="text-xl text-emerald-50">Expert advice and insights to keep your home spotless</p>
			</div>
		</div>
	</section>

	<!-- Blog Posts Grid -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				{posts.length === 0 ? (
					<!-- No posts available / Demo content -->
					<div class="text-center py-12">
						<div class="bg-emerald-50 rounded-xl p-8 max-w-2xl mx-auto mb-12">
							<h2 class="text-2xl font-bold text-gray-900 mb-4">Blog Coming Soon!</h2>
							<p class="text-gray-700 mb-6">
								We're working on bringing you expert cleaning tips and advice. 
								Check back soon for helpful articles on maintaining a spotless home.
							</p>
							<a href="/contact" class="inline-block bg-emerald-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-emerald-700 transition-all">
								Get in Touch
							</a>
						</div>

						<!-- Demo Blog Posts (shown when Contentful not configured) -->
						<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
							<!-- Demo Post 1 -->
							<article class="bg-gray-50 rounded-xl shadow-lg overflow-hidden opacity-50">
								<div class="bg-emerald-200 h-48 flex items-center justify-center">
									<svg class="w-16 h-16 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
									</svg>
								</div>
								<div class="p-6">
									<div class="text-sm text-emerald-600 font-semibold mb-2">Cleaning Tips</div>
									<h3 class="text-xl font-bold text-gray-900 mb-3">Spring Cleaning Checklist</h3>
									<p class="text-gray-600 mb-4">Essential tips for a thorough spring clean...</p>
									<span class="text-gray-400 text-sm">Coming Soon</span>
								</div>
							</article>

							<!-- Demo Post 2 -->
							<article class="bg-gray-50 rounded-xl shadow-lg overflow-hidden opacity-50">
								<div class="bg-emerald-200 h-48 flex items-center justify-center">
									<svg class="w-16 h-16 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
									</svg>
								</div>
								<div class="p-6">
									<div class="text-sm text-emerald-600 font-semibold mb-2">Guides</div>
									<h3 class="text-xl font-bold text-gray-900 mb-3">How to Remove Stubborn Stains</h3>
									<p class="text-gray-600 mb-4">Professional advice on tackling tough stains...</p>
									<span class="text-gray-400 text-sm">Coming Soon</span>
								</div>
							</article>

							<!-- Demo Post 3 -->
							<article class="bg-gray-50 rounded-xl shadow-lg overflow-hidden opacity-50">
								<div class="bg-emerald-200 h-48 flex items-center justify-center">
									<svg class="w-16 h-16 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
									</svg>
								</div>
								<div class="p-6">
									<div class="text-sm text-emerald-600 font-semibold mb-2">Maintenance</div>
									<h3 class="text-xl font-bold text-gray-900 mb-3">Keeping Your Home Fresh</h3>
									<p class="text-gray-600 mb-4">Daily habits for a cleaner home...</p>
									<span class="text-gray-400 text-sm">Coming Soon</span>
								</div>
							</article>
						</div>
					</div>
				) : (
					<!-- Actual Blog Posts from Contentful -->
					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						{posts.map((post) => (
							<article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
								{post.featuredImage ? (
									<img 
										src={post.featuredImage.fields.file.url} 
										alt={post.featuredImage.fields.title}
										class="w-full h-48 object-cover"
									/>
								) : (
									<div class="bg-emerald-100 h-48 flex items-center justify-center">
										<svg class="w-16 h-16 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
										</svg>
									</div>
								)}
								<div class="p-6">
									{post.category && (
										<div class="text-sm text-emerald-600 font-semibold mb-2">{post.category}</div>
									)}
									<h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-emerald-600 transition-colors">
										<a href={`/blog/${post.slug}`}>{post.title}</a>
									</h3>
									<p class="text-gray-600 mb-4">{post.excerpt}</p>
									<div class="flex items-center justify-between">
										<span class="text-gray-500 text-sm">{formatDate(post.publishDate)}</span>
										<a 
											href={`/blog/${post.slug}`}
											class="text-emerald-600 font-semibold hover:text-emerald-700 transition-colors"
										>
											Read more â†’
										</a>
									</div>
								</div>
							</article>
						))}
					</div>
				)}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-16 bg-emerald-600">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center text-white">
				<h2 class="text-3xl md:text-4xl font-bold mb-4">Need Professional Cleaning?</h2>
				<p class="text-xl mb-8 text-emerald-50">Let our experienced team handle the hard work</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/services" class="bg-white text-emerald-600 px-8 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition-all">
						Our Services
					</a>
					<a href="/contact" class="bg-emerald-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-emerald-800 transition-all border-2 border-white">
						Get a Quote
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>
