---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Our Services - Clean Collective Ltd" description="Explore our range of professional domestic cleaning services including standard cleans, deep cleans, and bathroom steam cleans.">
	<!-- Hero Section -->
	<section class="bg-emerald-600 text-white py-16 md:py-20">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Our Cleaning Services</h1>
				<p class="text-xl text-emerald-50">Professional cleaning tailored to your home's needs</p>
			</div>
		</div>
	</section>

	<!-- Standard Cleans -->
	<section id="standard" class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-12">
					<h2 class="text-4xl font-bold text-gray-900 mb-4">Standard Cleans</h2>
					<p class="text-xl text-gray-600">Regular cleaning services to maintain a fresh and tidy home</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Bathrooms -->
					<div class="bg-gray-50 rounded-xl p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Bathrooms</h3>
						<ul class="space-y-3">
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Limescale removal</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Clean sink, basin, shower & bath</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Mirrors cleaned</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Towel rails polished</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Floors cleaned & mopped</span>
							</li>
						</ul>
					</div>

					<!-- Kitchen -->
					<div class="bg-gray-50 rounded-xl p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Kitchen</h3>
						<ul class="space-y-3">
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Sanitise all work surfaces</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">External cupboard doors & handles</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Sink cleaned & polished</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Hob & splashback</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Floor swept & mopped</span>
							</li>
						</ul>
					</div>

					<!-- Living Areas -->
					<div class="bg-gray-50 rounded-xl p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Living Areas</h3>
						<ul class="space-y-3">
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Dust & polish all surfaces</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Mirrors cleaned</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Vacuum & mop hard floors</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Door handles & light switches</span>
							</li>
							<li class="flex items-start">
								<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-gray-700">Skirting boards dusted</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Deep Cleans -->
	<section id="deep" class="py-20 bg-gradient-to-br from-emerald-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-12">
					<h2 class="text-4xl font-bold text-gray-900 mb-4">Deep Cleans</h2>
					<p class="text-xl text-gray-600">Thorough, comprehensive cleaning for a spotless home</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					<div class="bg-white rounded-xl shadow-md p-6 border-2 border-emerald-100">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<span class="text-gray-700 font-medium">Internal doors & frames cleaned</span>
						</div>
					</div>

					<div class="bg-white rounded-xl shadow-md p-6 border-2 border-emerald-100">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<span class="text-gray-700 font-medium">Thorough skirting board wipe</span>
						</div>
					</div>

					<div class="bg-white rounded-xl shadow-md p-6 border-2 border-emerald-100">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<span class="text-gray-700 font-medium">Inside fridge & freezer</span>
						</div>
					</div>

					<div class="bg-white rounded-xl shadow-md p-6 border-2 border-emerald-100">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<span class="text-gray-700 font-medium">Inside dishwasher cleaned</span>
						</div>
					</div>

					<div class="bg-white rounded-xl shadow-md p-6 border-2 border-emerald-100">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<span class="text-gray-700 font-medium">Sofa & beds vacuumed and freshened</span>
						</div>
					</div>

					<div class="bg-white rounded-xl shadow-md p-6 border-2 border-emerald-100">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<span class="text-gray-700 font-medium">Furniture moved & cleaned behind</span>
						</div>
					</div>

					<div class="bg-white rounded-xl shadow-md p-6 border-2 border-emerald-100">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<span class="text-gray-700 font-medium">Inside kitchen cupboards</span>
						</div>
					</div>
				</div>

				<div class="mt-12 bg-emerald-600 text-white rounded-xl p-8 text-center">
					<p class="text-lg font-medium">Deep cleans include all standard cleaning services plus these additional tasks</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Bathroom Steam Cleans -->
	<section id="bathroom" class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<div class="text-center mb-12">
					<h2 class="text-4xl font-bold text-gray-900 mb-4">Bathroom Steam Cleans</h2>
					<p class="text-xl text-gray-600">Specialized deep cleaning using professional steam technology</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="text-center">
						<div class="w-20 h-20 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-6">
							<svg class="w-10 h-10 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-3">Thorough Grout Clean</h3>
						<p class="text-gray-600">Deep cleaning of tile grout to remove embedded dirt and restore original appearance</p>
					</div>

					<div class="text-center">
						<div class="w-20 h-20 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-6">
							<svg class="w-10 h-10 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-3">Thorough Limescale Removal</h3>
						<p class="text-gray-600">Complete removal of stubborn limescale buildup from taps, tiles, and shower screens</p>
					</div>

					<div class="text-center">
						<div class="w-20 h-20 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-6">
							<svg class="w-10 h-10 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-3">Thorough Mould Clean</h3>
						<p class="text-gray-600">Professional treatment and removal of mould from bathroom surfaces and sealant</p>
					</div>
				</div>

				<div class="mt-12 bg-gray-50 rounded-xl p-8">
					<h3 class="text-2xl font-bold text-gray-900 mb-4 text-center">Why Choose Steam Cleaning?</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<div>
								<h4 class="font-semibold text-gray-900 mb-1">Chemical-Free Cleaning</h4>
								<p class="text-gray-600">Safe for your family and the environment</p>
							</div>
						</div>
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<div>
								<h4 class="font-semibold text-gray-900 mb-1">Deep Sanitization</h4>
								<p class="text-gray-600">High temperature steam kills 99.9% of bacteria</p>
							</div>
						</div>
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<div>
								<h4 class="font-semibold text-gray-900 mb-1">Tackles Tough Stains</h4>
								<p class="text-gray-600">Removes stubborn marks that regular cleaning can't</p>
							</div>
						</div>
						<div class="flex items-start">
							<svg class="w-6 h-6 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
							<div>
								<h4 class="font-semibold text-gray-900 mb-1">Long-Lasting Results</h4>
								<p class="text-gray-600">Keeps your bathroom cleaner for longer</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-16 bg-emerald-600">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center text-white">
				<h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Get Started?</h2>
				<p class="text-xl mb-8 text-emerald-50">Contact us today for a free, no-obligation quote</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="#contact" class="bg-white text-emerald-600 px-8 py-4 rounded-lg font-semibold hover:bg-emerald-50 transition-all">
						Request a Quote
					</a>
					<a href="mailto:admin@cleancollective.co.uk" class="bg-emerald-700 text-white px-8 py-4 rounded-lg font-semibold hover:bg-emerald-800 transition-all border-2 border-white">
						Email Us
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form -->
	<section id="contact" class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<ContactForm 
				title="Request a Service Quote"
				subtitle="Tell us which service you're interested in and we'll provide a personalized quote."
			/>
		</div>
	</section>
</Layout>
