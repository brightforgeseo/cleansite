---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';
---

<Layout title="Cleaning Services in Barton under Needwood - Clean Collective Ltd" description="Professional domestic cleaning services in Barton under Needwood. Standard cleans, deep cleans, and bathroom steam cleaning. Part of our Burton upon Trent service area.">
	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-emerald-600 to-emerald-800 text-white py-16 md:py-20">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Cleaning Services in Barton under Needwood</h1>
				<p class="text-xl text-emerald-50 mb-6">Professional domestic cleaning for Barton under Needwood homes</p>
				<a href="#contact" class="inline-block bg-white text-emerald-600 px-8 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition-all">
					Get a Free Quote
				</a>
			</div>
		</div>
	</section>

	<!-- Service Area Info -->
	<section class="py-12 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<p class="text-lg text-gray-700">
					Providing professional cleaning services to Barton under Needwood and the surrounding areas. 
					Our team understands the local community and delivers cleaning services tailored to your needs.
				</p>
			</div>
		</div>
	</section>

	<!-- Services Offered -->
	<section class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Cleaning Services in Barton under Needwood</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Standard Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Standard Clean</h3>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Full bathroom cleaning</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Kitchen sanitization</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Living area cleaning</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Vacuuming & mopping</span>
							</li>
						</ul>
						<a href="/services/standard-clean" class="text-emerald-600 font-semibold">Learn more →</a>
					</div>

					<!-- Deep Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8 border-2 border-emerald-200">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Deep Clean</h3>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Inside appliances</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Behind furniture</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Cupboard interiors</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Detailed skirting & doors</span>
							</li>
						</ul>
						<a href="/services/deep-clean" class="text-emerald-600 font-semibold">Learn more →</a>
					</div>

					<!-- Steam Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Bathroom Steam Clean</h3>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Grout cleaning</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Limescale removal</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Mould treatment</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Chemical-free</span>
							</li>
						</ul>
						<a href="/services/steam-clean" class="text-emerald-600 font-semibold">Learn more →</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Local Benefits -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-gray-900 mb-8">Serving Barton under Needwood Families</h2>
				<p class="text-lg text-gray-700 mb-6">
					As a family-run business, we understand what Barton under Needwood families need. 
					Flexible scheduling, reliable service, and a team you can trust in your home.
				</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
					<div class="bg-emerald-50 rounded-lg p-6">
						<h3 class="font-bold text-gray-900 mb-2">✓ Flexible Scheduling</h3>
						<p class="text-gray-700">Weekly, fortnightly, or monthly visits to suit you</p>
					</div>
					<div class="bg-emerald-50 rounded-lg p-6">
						<h3 class="font-bold text-gray-900 mb-2">✓ Fully Insured</h3>
						<p class="text-gray-700">Complete peace of mind for your home</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form -->
	<section id="contact" class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<ContactForm 
				title="Get a Quote for Barton under Needwood"
				subtitle="Contact us for a free, no-obligation quote for your home in Barton under Needwood."
			/>
		</div>
	</section>
</Layout>
