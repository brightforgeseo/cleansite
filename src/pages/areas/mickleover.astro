---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';
---

<Layout title="Cleaning Services in Mickleover - Clean Collective Ltd" description="Professional domestic cleaning services in Mickleover, Derby. Standard cleans, deep cleans, and bathroom steam cleaning for Mickleover homes.">
	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-emerald-600 to-emerald-800 text-white py-16 md:py-20">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Cleaning Services in Mickleover</h1>
				<p class="text-xl text-emerald-50 mb-6">Professional domestic cleaning for Mickleover, Derby homes</p>
				<a href="#contact" class="inline-block bg-white text-emerald-600 px-8 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition-all">
					Get a Free Quote
				</a>
			</div>
		</div>
	</section>

	<!-- Service Area Info -->
	<section class="py-12 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<p class="text-lg text-gray-700">
					Proudly serving Mickleover with professional, reliable cleaning services. 
					Created by parents for parents, we understand busy Mickleover family life and provide cleaning solutions that work for you.
				</p>
			</div>
		</div>
	</section>

	<!-- Services Offered -->
	<section class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Our Cleaning Services in Mickleover</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Standard Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Standard Clean</h3>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Bathrooms cleaned</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Kitchen sanitized</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Living areas tidied</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Floors cleaned</span>
							</li>
						</ul>
						<a href="/services/standard-clean" class="text-emerald-600 font-semibold">Learn more →</a>
					</div>

					<!-- Deep Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8 border-2 border-emerald-200">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Deep Clean</h3>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Appliance interiors</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Behind furniture</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Inside cupboards</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Skirting boards</span>
							</li>
						</ul>
						<a href="/services/deep-clean" class="text-emerald-600 font-semibold">Learn more →</a>
					</div>

					<!-- Steam Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Bathroom Steam Clean</h3>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Deep grout clean</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Limescale removed</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Mould treated</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Eco-friendly</span>
							</li>
						</ul>
						<a href="/services/steam-clean" class="text-emerald-600 font-semibold">Learn more →</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Local Benefits -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-gray-900 mb-8">Why Mickleover Residents Choose Us</h2>
				<p class="text-lg text-gray-700 mb-6">
					Local, reliable, and trustworthy - that's what Mickleover families say about Clean Collective. 
					We're proud to serve the Mickleover community with professional cleaning services.
				</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
					<div class="bg-emerald-50 rounded-lg p-6">
						<h3 class="font-bold text-gray-900 mb-2">✓ Local Service</h3>
						<p class="text-gray-700">Fast, reliable service in Mickleover</p>
					</div>
					<div class="bg-emerald-50 rounded-lg p-6">
						<h3 class="font-bold text-gray-900 mb-2">✓ Family-Run</h3>
						<p class="text-gray-700">We understand Mickleover family life</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form -->
	<section id="contact" class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<ContactForm 
				title="Get a Quote for Mickleover"
				subtitle="Contact us for a free, no-obligation quote for your home in Mickleover."
			/>
		</div>
	</section>
</Layout>
