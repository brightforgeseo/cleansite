---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';
---

<Layout title="Cleaning Services in Derby - Clean Collective Ltd" description="Professional domestic cleaning services in Derby. Standard cleans, deep cleans, and bathroom steam cleaning. Serving Mickleover, Mackworth, and Melbourne.">
	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-emerald-600 to-emerald-800 text-white py-16 md:py-20">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Cleaning Services in Derby</h1>
				<p class="text-xl text-emerald-50 mb-6">Professional domestic cleaning within 5 miles of Derby</p>
				<a href="#contact" class="inline-block bg-white text-emerald-600 px-8 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition-all">
					Get a Free Quote
				</a>
			</div>
		</div>
	</section>

	<!-- Service Area Info -->
	<section class="py-12 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<p class="text-lg text-gray-700">
					Serving Derby and surrounding areas including Mickleover, Mackworth, and Melbourne. 
					Our family-run cleaning company understands what Derby families need - reliable, flexible, and professional cleaning services.
				</p>
			</div>
		</div>
	</section>

	<!-- Services Offered -->
	<section class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Our Cleaning Services in Derby</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Standard Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow">
						<div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mb-6">
							<svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Standard Clean</h3>
						<p class="text-gray-600 mb-4">Regular cleaning services to keep your Derby home spotless.</p>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Bathrooms cleaned & sanitized</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Kitchen deep cleaned</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Living areas dusted & vacuumed</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Floors mopped & polished</span>
							</li>
						</ul>
						<a href="/services/standard-clean" class="text-emerald-600 font-semibold hover:text-emerald-700">
							Learn more →
						</a>
					</div>

					<!-- Deep Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow border-2 border-emerald-200">
						<div class="w-16 h-16 bg-emerald-600 rounded-full flex items-center justify-center mb-6">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Deep Clean</h3>
						<p class="text-gray-600 mb-4">Thorough top-to-bottom cleaning for Derby homes.</p>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Inside appliances (fridge, oven)</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Behind & under furniture</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Inside cupboards</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Skirting boards & door frames</span>
							</li>
						</ul>
						<a href="/services/deep-clean" class="text-emerald-600 font-semibold hover:text-emerald-700">
							Learn more →
						</a>
					</div>

					<!-- Steam Clean -->
					<div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow">
						<div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mb-6">
							<svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-gray-900 mb-4">Bathroom Steam Clean</h3>
						<p class="text-gray-600 mb-4">Specialist steam cleaning for Derby bathrooms.</p>
						<ul class="space-y-2 text-gray-700 mb-6">
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Grout deep cleaned</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Limescale removal</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Mould treatment</span>
							</li>
							<li class="flex items-start">
								<span class="text-emerald-600 mr-2">✓</span>
								<span>Eco-friendly cleaning</span>
							</li>
						</ul>
						<a href="/services/steam-clean" class="text-emerald-600 font-semibold hover:text-emerald-700">
							Learn more →
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose Us -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Why Derby Families Choose Us</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div class="flex items-start">
						<svg class="w-8 h-8 text-emerald-600 mr-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
						</svg>
						<div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Local Derby Service</h3>
							<p class="text-gray-700">Proudly serving Derby and surrounding areas with fast, reliable service.</p>
						</div>
					</div>
					<div class="flex items-start">
						<svg class="w-8 h-8 text-emerald-600 mr-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
						</svg>
						<div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Parent-Friendly</h3>
							<p class="text-gray-700">Created by parents for parents - we understand Derby family life.</p>
						</div>
					</div>
					<div class="flex items-start">
						<svg class="w-8 h-8 text-emerald-600 mr-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
						</svg>
						<div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Flexible Hours</h3>
							<p class="text-gray-700">Scheduling that works around your Derby lifestyle and commitments.</p>
						</div>
					</div>
					<div class="flex items-start">
						<svg class="w-8 h-8 text-emerald-600 mr-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
						</svg>
						<div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Fully Insured</h3>
							<p class="text-gray-700">Complete peace of mind with comprehensive insurance coverage.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Areas Covered -->
	<section class="py-16 bg-emerald-50">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-gray-900 mb-6">Areas We Cover in Derby</h2>
				<p class="text-lg text-gray-700 mb-8">We serve Derby and all areas within a 5-mile radius:</p>
				<div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-gray-700">
					<div class="bg-white rounded-lg p-4 shadow">Derby</div>
					<div class="bg-white rounded-lg p-4 shadow">Mickleover</div>
					<div class="bg-white rounded-lg p-4 shadow">Mackworth</div>
					<div class="bg-white rounded-lg p-4 shadow">Melbourne</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form -->
	<section id="contact" class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<ContactForm 
				title="Get a Quote for Derby"
				subtitle="Fill out the form below and we'll provide a free, no-obligation quote for your home in Derby."
			/>
		</div>
	</section>
</Layout>
